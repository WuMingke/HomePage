<?xml version="1.0" encoding="utf-8"?>
<com.erkuai.homepage.widget.ConsecutiveScrollerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="主页文字" />

    <LinearLayout
        android:id="@+id/ll_second_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_isSticky="true">

        <TextView
            android:id="@+id/tv_gift_wall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_click_bg"
            android:gravity="center"
            android:text="礼物墙" />

        <TextView
            android:id="@+id/tv_gift_suit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_unclick_bg"
            android:gravity="center"
            android:text="礼物套装" />

    </LinearLayout>

    <com.erkuai.homepage.widget.ConsecutiveViewPager
        android:id="@+id/cs_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.erkuai.homepage.widget.ConsecutiveScrollerLayout>